<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/book_cart_offer_value"
        style="@style/BlackSubTitleTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/heavy_border_margin"
        android:layout_marginRight="@dimen/heavy_border_margin"
        android:textSize="@dimen/subtitle_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_cart_offer_message"
        style="@style/BlackSubTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/book_cart_offer_value"
        android:layout_toStartOf="@id/book_cart_offer_value"
        android:gravity="start"
        android:textSize="@dimen/subtitle_size"
        android:textStyle="italic" />

</RelativeLayout>