<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/heavy_border_margin"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/book_cover_imageview"
        style="@style/BookVerticalImageView" />

    <LinearLayout
        style="@style/CatalogBookViewGroup"
        android:layout_marginEnd="@dimen/light_border_margin"
        android:layout_marginLeft="@dimen/light_border_margin"
        android:layout_marginRight="@dimen/light_border_margin"
        android:layout_marginStart="@dimen/light_border_margin"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/heavy_border_margin">

        <TextView
            android:id="@+id/book_title_textview"
            style="@style/BookTitleTextView"
            android:layout_width="match_parent"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_price_textview"
                style="@style/PriceTextView"
                android:layout_marginEnd="@dimen/widget_separation"
                android:layout_marginLeft="@dimen/widget_separation"
                android:layout_marginRight="@dimen/widget_separation"
                android:layout_marginStart="@dimen/widget_separation"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/book_add_to_cart_button"
                style="@style/AddToCartButton"
                android:layout_marginRight="@dimen/heavy_border_margin"
                android:layout_marginEnd="@dimen/heavy_border_margin"
                android:drawableLeft="@drawable/add_cart"
                android:drawablePadding="@dimen/padding_soft"
                android:drawableStart="@drawable/add_cart" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>